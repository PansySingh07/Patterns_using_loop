public class HollowRightTriangle {
  public static void main(String args[]) {
  int range =5;
  char character = 'A';
  for(int row =0; row<=range; row++){
      for (int col = 0; col<=row; col++){
          if (col==0 || row == range ||row == col){
              System.out.print("* ");
          }
          else{
              System.out.print("  ");
          }
      }
      System.out.println();
  }
  }
}
